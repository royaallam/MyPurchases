<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/choose_ima"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="175sp"
        android:layout_height="50sp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="24sp"
        android:fontFamily="sans-serif-black"
        android:text="@string/barcode"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/codebarEt"
        android:layout_width="175sp"
        android:layout_height="50sp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="28sp"
        android:ems="10"
        android:fontFamily="sans-serif-black"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="106sp"
        android:layout_height="27sp"
        android:layout_marginStart="32sp"
        android:layout_marginTop="32sp"
        android:fontFamily="sans-serif-black"
        android:text="@string/decripation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/codebarEt" />

    <EditText
        android:id="@+id/decpationEt"
        android:layout_width="200sp"
        android:layout_height="50sp"
        android:layout_marginStart="20sp"
        android:layout_marginTop="16sp"
        android:ems="10"
        android:fontFamily="sans-serif-black"
        android:hint="@string/enter_you_decipation"
        android:inputType="textPersonName"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="96sp"
        android:layout_height="37sp"
        android:layout_marginTop="36sp"
        android:fontFamily="sans-serif-black"
        android:text="@string/priec"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/decpationEt"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/priceRY"
        android:layout_width="219sp"
        android:layout_height="67sp"
        android:layout_marginTop="36sp"
        android:ems="10"
        android:fontFamily="sans-serif-black"
        android:hint="@string/enter_you_priec"
        android:inputType="textPersonName"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="14sp" />

    <Button
        android:id="@+id/add_btn"
        android:layout_width="300sp"
        android:layout_height="50sp"
        android:layout_marginStart="80sp"
        android:layout_marginTop="52sp"
        android:background="@drawable/cutom_btm"
        android:text="@string/add"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/priceRY" />

    <ImageView
        android:id="@+id/iamge_pro"
        android:layout_width="150sp"
        android:layout_height="150sp"
        android:layout_marginTop="36sp"
        android:layout_marginEnd="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/uplaed_image"
        android:layout_width="110sp"
        android:layout_height="50sp"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="44sp"
        android:text="@string/uploed"
        android:background="@drawable/cutom_btm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_image" />

    <ImageView
        android:id="@+id/select_image"
        android:layout_width="100sp"
        android:layout_height="62sp"
        android:layout_marginTop="4sp"
        android:layout_marginEnd="52sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iamge_pro"
        app:srcCompat="@drawable/image_camera" />
</androidx.constraintlayout.widget.ConstraintLayout>